<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subject_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_thumbnail"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/subject_icon_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/default_icon" />

    <Space
        android:layout_width="16dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/subject_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subject_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/subject_teachers_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:text="-"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/empty_divider"
            android:gravity="left"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/subject_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="-"
                android:textAlignment="textStart"
                android:textColor="@color/grey_400" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/subject_icon_news"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_baseline_notification_important_24" />

            <ImageView
                android:id="@+id/subject_icon_assignment"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_baseline_edit_24" />

            <ImageView
                android:id="@+id/subject_icon_report"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_baseline_assignment_turned_in_24" />

            <ImageView
                android:id="@+id/subject_icon_thread"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_baseline_chat_24" />

            <ImageView
                android:id="@+id/subject_icon_indivisual"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_baseline_people_24" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>